# Server Configuration
NODE_ENV=development
PORT=3000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# OAuth Configuration
OAUTH_CLIENT_ID=your-google-oauth-client-id
OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/api/v1/auth/callback

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key

# Database (Optional - for session persistence)
DATABASE_URL=postgres://user:password@localhost:5432/gemini_server

# Redis (Optional - for scaling)
REDIS_URL=redis://localhost:6379

# Monitoring
MONITORING_ENABLED=true
MONITORING_ENDPOINT=https://your-monitoring-backend.com/api

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760